{
  "name": "rallly",
  "private": true,
  "version": "3.2.0",
  "scripts": {
    "dev": "dotenv -c development -- turbo dev --filter=@rallly/web",
    "dev:emails": "turbo dev --filter=@rallly/emails",
    "start": "turbo run start --filter=@rallly/web...",
    "build": "turbo run build --filter=@rallly/web...",
    "docs:dev": "turbo dev --filter=@rallly/docs...",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "turbo db:generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:up": "docker compose up -d rallly_db",
    "db:seed": "yarn workspace @rallly/database db:seed",
    "db:down": "docker compose down --volumes --remove-orphans rallly_db",
    "db:setup": "run-s db:deploy db:seed",
    "dx": "run-s db:up db:setup",
    "test": "yarn workspace @rallly/web test",
    "lint": "turbo lint",
    "i18n:scan": "turbo i18n:scan",
    "lint:tsc": "turbo lint:tsc",
    "release": "./scripts/create-release.sh"
  },
  "prisma": {
    "seed": "yarn workspace @rallly/database db:seed"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@sentry/nextjs": "^7.77.0",
    "framer-motion": "^10.16.4",
    "next": "^14.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.1",
    "eslint-config-turbo": "^1.10.16",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "dotenv-cli": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "turbo": "^1.10.7"
  },
  "engines": {
    "node": "18.x"
  },
  "packageManager": "yarn@1.22.19"
}
